---
import type { Props } from "@astrojs/starlight/props";

import EditLink from "@astrojs/starlight/components/EditLink.astro";
import LastUpdated from "@astrojs/starlight/components/LastUpdated.astro";
import Pagination from "@astrojs/starlight/components/Pagination.astro";

const version = import.meta.env.PUBLIC_VERSION;
const githubLink = import.meta.env.PUBLIC_GITHUB;
const license = import.meta.env.PUBLIC_LICENSE;
---

<footer>
  <div class="meta sl-flex">
    <EditLink {...Astro.props} />
    <LastUpdated {...Astro.props} />
  </div>
  <Pagination {...Astro.props} />
  <p>Copyright Â© 2023- Idea Pool Community. Distributed by an <a href={license}>CC BY-NC-ND 4.0</a> license. Idea Pool <a href={githubLink}>@GitHub</a> {version}</p>
</footer>

<style>
  .meta {
    gap: 0.75rem 3rem;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-block: 3rem 1.5rem;
    font-size: var(--sl-text-sm);
    color: var(--sl-color-gray-3);
  }
  .meta > :global(p:only-child) {
    margin-inline-start: auto;
  }
  p {
    padding-top: 10%;
  }
</style>
